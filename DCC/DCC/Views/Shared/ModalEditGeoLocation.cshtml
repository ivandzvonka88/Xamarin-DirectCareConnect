@model DCC.Models.GeoLocation

<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fa fa-edit"></i> <span>New Service Location</span></h5><button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="gLtype" value="@Model.locationTypeId">
                <input type="hidden" id="gLcoLocation" value="0" />


                <div class="row" id="geoByAddress">
                    <div class="sm-12">
                        <div class="form-group">
                            <label for="gLAd1">Address</label>
                            <input id="gLAd1" class="form-control form-control-sm " type="text" autocomplete="off" value="@Model.ad1" />
                        </div>
                        <div class="form-group">
                            <label for="gLAd2">Apartment# </label>
                            <input id="gLAd2" class="form-control form-control-sm address" type="text" autocomplete="off" value="@Model.ad2" / />
                        </div>

                        <div class="form-group">
                            <label for="gLCty">City</label>
                            <input id="gLCty" class="form-control form-control-sm address" form-control-sm type="text" autocomplete="off" value="@Model.cty" />
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="stateSelect">State</label>
                                    @Html.Partial("_StateSelector", Model?.st ?? "")
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="gLZ">Zip</label>
                                    <input id="gLZ" class="form-control form-control-sm zip" type="text" autocomplete="off" value="@Model.zip" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="gLLandline" style="color:red">Landline for EVV</label>
                                    <input id="gLLandline" class="form-control form-control-sm address" type="text" autocomplete="off" value="@Model.landline" />
                                </div>

                            </div>
                            <div class="col-sm-6">
                                <div class="form-group" style="display:none">
                                    <label for="gLRad">Radius (feet)</label>
                                    <input id="gLRad" class="form-control form-control-sm address" type="text" autocomplete="off" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="gLBtn" type="button" class="btn btn-primary" onclick="updateGeoLocation();">Update Location</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#stateSelect').val('@Model.st.Trim()'); 
    $('#actionModal').modal('show');
</script>