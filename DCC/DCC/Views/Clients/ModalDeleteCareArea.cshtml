@model  DCC.Models.CareArea
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fa fa-edit"></i> Remove Care Area</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="careAreaId" value="@Model.careId">
                <p> Delete Care Area: @Model.careArea </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteCareArea();">Remove this care area.</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#actionModal').modal('show');
</script>