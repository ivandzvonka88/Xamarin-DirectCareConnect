@model DCC.Models.Staff.EmployeeRoleList
<div id="actionModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fa fa-edit"></i> Add New Staff Member</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="fnz">First Name</label>
                                <input id="fnz" class="form-control form-control-sm" type="text" autocomplete="off" />
                            </div>
                            <div class="form-group">
                                <label for="lnz">Last Name</label>
                                <input id="lnz" class="form-control form-control-sm" type="text"  autocomplete="off"/>
                            </div>
                            <div class="form-group">
                                <label for="emz">Email</label>
                                <input id="emz" class="form-control form-control-sm" type="text"  autocomplete="off"/>
                            </div>
                            <div class="form-group">
                                <label for="clz">Cell</label>
                                <input id="clz" class="form-control form-control-sm" type="text"  autocomplete="off"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="qualifiedTherapistz"><input id="qualifiedTherapistz" type="checkbox" /> Master Therapist</label>
                            </div>
                            <div class="form-group">
                                <label for="assistantTherapistz"><input id="assistantTherapistz" type="checkbox" /> Therapist Assistant</label>
                            </div>
                            <div style="text-indent:25px">
                                <b>Therapy Discipline</b>
                                <div class="form-group">
                                    <label for="occupationalTherapyz"><input id="occupationalTherapyz" type="checkbox" /> Occupational Therapy</label>
                                </div>
                                <div class="form-group">
                                    <label for="speechTherapyz"><input id="speechTherapyz" type="checkbox" /> Speech Therapy</label>
                                </div>
                                <div class="form-group">
                                    <label for="physicalTherapyz"><input id="physicalTherapyz" type="checkbox" /> Physical Therapy</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="basicProviderz"><input id="basicProviderz" type="checkbox" /> Basic Provider</label>
                            </div>

                            <div class="form-group">
                                <label for="bcbaz"><input id="bcba" type="checkbox" /> BCBA </label>
                            </div>
                            <div class="form-group">
                                <label for="rbtz"><input id="rbt" type="checkbox" /> RBT </label>
                            </div>
                            <div class="form-group">
                                <label for="rolez">Role</label>
                                <select id="rolez" onchange="roleChange();">
                                    <option value="0"></option>
                                    @foreach (var item in Model.employeeRoles)
                                    {
                                        <option value="@item.id">@item.name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="guBtn" type="button" class="btn btn-danger" onclick="addStaff();">Invite</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#actionModal').modal('show');
</script>