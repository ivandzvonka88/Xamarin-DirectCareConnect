@model  DCC.Models.OIGPageData
<style>
    table td,th{
        padding:3px;
        text-align:left;
        
    }


</style>


    <div style="margin:20px;padding:20px;background-color:white">

        <div style="font-size:20px;margin:20px">OIG File Date <span>@Model.OIGFileDate</span></div>

        @if (Model.OIGMatches.Count != 0)
        {
            <table>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>D.O.B.</th>
                </tr>
                @foreach (var item in Model.OIGMatches)
                {
                    <tr>
                        <td>@item.firstName</td>
                        <td>@item.lastName</td>
                        <td>@item.address</td>
                        <td>@item.city</td>
                        <td>@item.state</td>
                        <td>@item.zip</td>
                        <td style="text-align:right">@item.dob</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div style="font-size:20px;margin:20px">NO NAME MATCHES FOUND</div>
        }


    </div>

