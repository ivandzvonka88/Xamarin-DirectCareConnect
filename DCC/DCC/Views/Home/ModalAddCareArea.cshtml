@model  DCC.Models.ServicesRequiringCareAreas
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fa fa-edit"></i> Add Care Area</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <select class="form-control form-control-sm" id="careServiceSelect" onchange="getCareAreas();">
                        <option value="0"></option>
                        @foreach(var service in Model.services)
                        {
                            <option value="@service.value">@service.name</option>
                        }

                    </select>

                </div>
                <div class="form-group">
                    <label for="careName">Task</label>
                    <select class="form-control form-control-sm" id="careName">
                        <option value="0"></option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="addCareArea();">Add care area.</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#actionModal').modal('show');
</script>


