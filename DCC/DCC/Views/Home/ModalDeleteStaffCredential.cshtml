@model DCC.Models.CredentialModal
<div id="actionModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="fa fa-trash"></i> Delete Credential</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="credId" value="@Model.credId" />
                <div class="cred">@Model.credName</div>
                <div class="cred">Document Id: @Model.docId</div>
                <div class="cred">Valid From: @Model.validFrom</div>
                <div class="cred">Valid To: @Model.validTo</div>
                <input type="hidden" id="docName" value="@Model.docName" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="deleteCredential();">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
$('#actionModal').modal('show');
</script>
