@model DCC.Models.NewServices
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Add New Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="newServiceSelect">New Service</label>
                    <select id="newServiceSelect" class="form-control form-control-sm">
                        @foreach (var item in Model.serviceOptions)
                        {
                            <option value="@item.value">@item.name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="dddPay"><input id="dddPay" type="checkbox" /> DDD Pay</label>
                </div>
                <div class="form-group">
                    <label for="pInsPay"><input id="pInsPay" type="checkbox" /> Private Insurance Pay</label>
                </div>
                <div class="form-group">
                    <label for="ppPay"><input id="ppPay" type="checkbox" /> Cash Pay</label>
                </div>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="addNewService();">Add New Service</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
    </div>
</div>
<script>
    $('#actionModal').modal('show');
</script>
